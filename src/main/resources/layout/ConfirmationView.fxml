<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <Text fx:id="titleText" fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Close the game?" textAlignment="CENTER">
               <font>
                  <Font name="Copperplate" size="36.0" />
               </font>
            </Text>
            <Text fx:id="hintText" fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Use left and right  arrows to select then press ENTER" textAlignment="CENTER">
               <font>
                  <Font name="Copperplate" size="18.0" />
               </font>
            </Text>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Rectangle fx:id="confirmBtn" arcHeight="5.0" arcWidth="5.0" fill="#949494" height="50.0" stroke="BLACK" strokeType="INSIDE" width="200.0" />
                  <Separator focusTraversable="false" minWidth="50.0" orientation="VERTICAL" prefHeight="100.0" visible="false" />
                  <Rectangle fx:id="denyBtn" arcHeight="5.0" arcWidth="5.0" fill="#949494" height="50.0" stroke="BLACK" strokeType="INSIDE" width="200.0" />
               </children>
               <VBox.margin>
                  <Insets top="40.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </center>
</BorderPane>
