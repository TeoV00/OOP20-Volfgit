      <VBox alignment="TOP_CENTER" BorderPane.alignment="CENTER">
         <children>
            <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="LeaderBoard" textAlignment="CENTER">
               <font>
                  <Font name="Copperplate" size="36.0" />
               </font>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Text>
            <HBox alignment="CENTER">
               <children>
                  <Label alignment="CENTER" prefWidth="150.0" text="POS" textAlignment="CENTER" textFill="#d02121">
                     <font>
                        <Font name="Copperplate" size="27.0" />
                     </font>
                  </Label>
                  <Separator fx:id="sep1" focusTraversable="false" orientation="VERTICAL" prefWidth="60.0" visible="false" />
                  <Label alignment="CENTER" prefWidth="150.0" text="name" textAlignment="CENTER" textFill="#d02121">
                     <font>
                        <Font name="Copperplate" size="27.0" />
                     </font>
                  </Label>
                  <Separator fx:id="sep21" focusTraversable="false" orientation="VERTICAL" prefWidth="50.0" visible="false" />
