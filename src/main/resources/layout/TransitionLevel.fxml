<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="vg.view.transition.TransitionViewController">
   <center>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="You WIN !!" textAlignment="CENTER">
               <font>
                  <Font name="Copperplate" size="36.0" />
               </font>
            </Text>
            <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Score" textAlignment="CENTER">
               <font>
                  <Font name="Copperplate" size="23.0" />
               </font>
               <VBox.margin>
                  <Insets top="30.0" />
               </VBox.margin>
            </Text>
            <Text fx:id="score" fill="#ffc800" strokeType="OUTSIDE" strokeWidth="0.0" text="0" textAlignment="CENTER">
               <font>
                  <Font name="Copperplate" size="33.0" />
               </font>
            </Text>
         </children>
      </VBox>
   </center>
   <bottom>
      <VBox alignment="CENTER" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER">
               <children>
                  <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Level" textAlignment="CENTER">
                     <font>
                        <Font name="Copperplate" size="25.0" />
                     </font>
                  </Text>
                  <Separator focusTraversable="false" orientation="VERTICAL" prefWidth="10.0" visible="false" />
                  <Text fx:id="level" fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="2" textAlignment="CENTER">
                     <font>
                        <Font name="Copperplate" size="25.0" />
                     </font>
                  </Text>
                  <Separator focusTraversable="false" orientation="VERTICAL" prefWidth="10.0" visible="false" />
                  <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="in:" textAlignment="CENTER">
                     <font>
                        <Font name="Copperplate" size="25.0" />
                     </font>
                  </Text>
               </children>
            </HBox>
            <Text fx:id="timeout" fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="0" textAlignment="CENTER">
               <font>
                  <Font name="Copperplate" size="28.0" />
               </font>
            </Text>
         </children>
         <BorderPane.margin>
            <Insets bottom="20.0" />
         </BorderPane.margin>
      </VBox>
   </bottom>
</BorderPane>
